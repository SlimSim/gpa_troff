{
  "name": "Troff - Training with music",
  "short_name": "Troff",
  "version": "1.2.1",
  "manifest_version": 2,
  "description": "Training with music - A Music player that let you loop a part of a song, slow it down and create markers on the song timeline.",
  "permissions": [
    "storage"
    ,{"mediaGalleries": ["read", "allAutoDetected"]}
  ],
  "icons": {
    "16" : "assets/trofflogo16.png",
    "48" : "assets/trofflogo48.png",
    "128": "assets/trofflogo128.png"
  },
  "app": {
    "background": {
      "scripts": ["runtime.js"]
    }
  },
  "offline_enabled": true
}
